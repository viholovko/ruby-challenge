.row
  .col-2
  .col-8
    .pt-5
      = simple_form_for(@user, url: '#', data: { controller: "user", reflex: "keyup->UserReflex#auto_save", id: @user.id} ) do |f|
        .row
          .col-12.col-lg-6.mb-3.pt-2
            = f.input :first_name, class: 'form-control', data: { stimulus_reflex_debounce: true }

          .col-12.col-lg-6.mb-3.pt-2
            = f.input :last_name, class: 'form-control', data: { stimulus_reflex_debounce: true }

        .mb-2.pt-2
          = f.input :middle_name, class: 'form-control', data: { stimulus_reflex_debounce: true }

        .row
          .col-12.col-lg-6.mb-3.pt-2
            = f.input :phone_number, class: 'form-control', data: { stimulus_reflex_debounce: true }

          .col-12.col-lg-6.mb-3.pt-2
            = f.input :email, class: 'form-control', data: { stimulus_reflex_debounce: true }

        .mb-2.pt-2
          = f.input :social_security_number, class: 'form-control', data: { controller: "ssn", action: "change->SSN#format" }

        .mb-2.pt-2
          = f.input :country, as: :select, required: false,
                collection: ['United States', 'Other'], include_blank: false,
                selected: f.object.country ? f.object.country : 'United States',
                input_html: { class: 'form-select', data: { controller: "country", action: "change->Country#toggleOtherInput" } }
        
        %div#other_country_name_field.hidden
          = f.input :other_country_name, label: "Other country name", class: 'form-control'


        .mb-2.pt-2
          = f.input :address, class: 'form-control', data: { stimulus_reflex_debounce: true }
        .row
          .col-12.col-lg-6.mb-3.pt-2
            = f.input :city, class: 'form-control', data: { stimulus_reflex_debounce: true }

          .col-12.col-lg-6.mb-3.pt-2
            = f.input :state, class: 'form-control', data: { stimulus_reflex_debounce: true }

        .mb-2.pt-2
          = f.input :zip_code, label: "Zip code", class: 'form-select', data: { stimulus_reflex_debounce: true }

    .mb-2.text-end
      = link_to 'Back', root_path, class: 'button btn btn-primary'